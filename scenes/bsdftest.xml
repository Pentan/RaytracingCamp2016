<?xml version="1.0" encoding="UTF-8" ?>
<scene version="0.1">
	<!-- config -->
	<!--
		threads=0 : auto detect
	-->
	<renderer
		type="pathtrace"
		width="256"
		height="256"
		subSamples="2"
		samples="64"
		minDepth="3"
		maxDepth="8"
		tileSize="32"
		threads="0"
		progressOutInterval="30.0"
		output="bsdftest.bmp"/>
	
	<camera>
		<transform>
			<lookat 
				position="0.0, 3.0, 12.0"
				lookat	="0.0, 0.0, 0.0"
				up		="0.0, 1.0, 0.0"/>
		</transform>
		<lens type="pinhole" focalLength="28.0" fNumber="0.0"/>
		<sensor width="24.0" height="24.0" aspect="1.0"/>
	</camera>
	
	<sky type="sphere">
		<!-- <color type="rgb" r="0.5" g="0.5" b="0.5"/> -->
		<texture type="image" src="images/doge2.hdr" />
	</sky>
	
	<library></library>
	
	<!-- floor -->
	<object id="floor">
    	<geometry type="cube" position="0.0, -1.5, 0.0" size="20.0, 0.5, 20.0"/>
		<material type="singlebsdf">
			<bsdf type="lambert" />
			<reflectance color="0.2, 0.2, 0.2"/>
			<emittance color="0.0, 0.0, 0.0"/>
		</material>
	</object>
	
	<!-- objects -->
	<object>
		<geometry type="sphere" position="0.0, 0.0, 0.0" radius="1.0"/>
		<material type="singlebsdf">
            <bsdf type="ggx" roughness="0.5"/>
			<reflectance color="0.8, 0.8, 0.8"/>
			<emittance color="0.0, 0.0, 0.0"/>
		</material>
    </object>
	<object>
		<geometry type="sphere" position="2.5, 0.0, 0.0" radius="1.0"/>
		<material type="singlebsdf">
			<bsdf type="ggx" roughness="1.0"/>
			<reflectance color="0.2, 0.2, 0.2"/>
			<emittance color="0.0, 0.0, 0.0"/>
		</material>
	</object>
	<object>
		<geometry type="sphere" position="-2.5, 0.0, 0.0" radius="1.0"/>
		<material type="singlebsdf">
			<bsdf type="ggx" roughness="0.0001"/>
			<reflectance color="0.2, 0.2, 0.2"/>
			<emittance color="0.0, 0.0, 0.0"/>
		</material>
	</object>
    
    <object>
        <geometry type="sphere" position="0.0, 0.0, -2.5" radius="1.0"/>
        <material type="singlebsdf">
            <bsdf type="ggx" roughness="0.5" fresnelIor="2.0"/>
            <reflectance color="0.9, 0.2, 0.2"/>
            <emittance color="0.0, 0.0, 0.0"/>
        </material>
    </object>
    <object>
        <geometry type="sphere" position="2.5, 0.0, -2.5" radius="1.0"/>
        <material type="singlebsdf">
            <bsdf type="ggx" roughness="0.5" fresnelIor="1.0"/>
            <reflectance color="0.2, 0.9, 0.2"/>
            <emittance color="0.0, 0.0, 0.0"/>
        </material>
    </object>
    <object>
        <geometry type="sphere" position="-2.5, 0.0, -2.5" radius="1.0"/>
        <material type="singlebsdf">
            <bsdf type="ggx" roughness="0.5" fresnelIor="4.0"/>
            <reflectance color="0.2, 0.2, 0.9"/>
            <emittance color="0.0, 0.0, 0.0"/>
        </material>
    </object>
    
    <!-- light source object -->
	<object id="light">
		<geometry type="sphere" position="0.0, 4.0, 4.0" radius="1.0"/>
		<material type="light">
			<emittance color="36.0, 36.0, 36.0"/>
		</material>
	</object>
</scene>